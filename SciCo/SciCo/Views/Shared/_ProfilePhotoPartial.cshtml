<div id="pictureBoxProfile">
    <div>
        <p>Select Profile Photo</p>
    </div>
    <div>
        <p>Photo to upload</p>
        <img id="profileImg" />
    </div>
    <div>
        <form name="profilePictureForm" id="profilePictureForm" asp-controller="Photo" asp-action="AddProfilePhoto" enctype="multipart/form-data">
            <div>
                <input type="file" id="pPhoto" name="ProfileImage" />
                <a href="#" id="changeProfilePhoto"> <i class="fas fa-cloud-upload-alt"></i> </a>
            </div>
            <div>
                <button id="submitProfilePhoto" type="submit">Upload<i class="fas fa-cloud-upload-alt"></i> </button>
            </div>
        </form>
    </div>
    <a href="#" class="close"> <i class="far fa-times-circle"></i> </a>
</div>