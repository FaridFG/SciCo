@model MessageVM
@{ AppUser user = await _userManager.GetUserAsync(User);}

@{
    ViewData["Title"] = "ShowMessages";
    Layout = "~/Views/Shared/_AccountPageLayout.cshtml";
}



@for (int i = 0; i < Model.Senders.Count(); i++)
{
    @for (int j = 0; j < Model.Senders.Count(); j++)
    {
        if (@Model.Senders.ElementAt(i) == Model.Senders.ElementAt(j))
        {
            continue;
        }
        else
        {
            <h1>@Model.Senders.ElementAt(i).UserName</h1>
        }
    }
}



