@model AppUser
@{ AppUser user = await _userManager.GetUserAsync(User);}
@{ System.Globalization.DateTimeFormatInfo date = new System.Globalization.DateTimeFormatInfo();}
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_AccountPageLayout.cshtml";
}

<section id="profile">
    <div id="coverPhoto">
        @if (Model.CoverPhoto == null)
        {
            <p>Cover Photo</p>
        }
        else
        {
            <a href="#"> <img src="~/img/@Model.CoverPhoto" alt="cover photo" /> </a>
        }
    </div>
    <div id="options">
        <ul>
            <li>
                <a asp-action="Timeline" asp-route-id="@Model.Id">Timeline</a>
            </li>
            <li>
                <a class="active" asp-action="About" asp-route-id="@Model.Id">About</a>
            </li>
            <li>
                <a asp-action="Friends" asp-route-id="@Model.Id">Friends</a>
            </li>
            <li id="accountInfo">
                <ul>
                    <li id="photoItem">
                        @if (Model.ProfilePhoto == null)
                        {
                            <p>Profile<br>Photo</p>
                        }
                        else
                        {
                            <a href="#"> <img src="~/img/@Model.ProfilePhoto" alt="profile photo"> </a>
                        }
                    </li>
                    <li>
                        <a href="#">@Model.Name @Model.Surname</a>
                    </li>
                    <li>
                        <a href="#">Baku, Azerbaijan</a>
                    </li>
                </ul>
            </li>
            <li>
                <a href="photos.html">Photos</a>
            </li>
            <li>
                <a href="videos.html">Videos</a>
            </li>
            <li id="more">
                <a href="#" class="button"> <i class="fas fa-ellipsis-h"></i> </a>
                @if (Model == user)
                {
                    <form id="accountOptions" class="subMenu" method="post">
                        <div>
                            <input type="hidden">
                            <button>Update Profile Photo</button>
                        </div>
                        <div>
                            <input type="hidden">
                            <button>Update Cover Photo</button>
                        </div>
                    </form>
                }
                else
                {
                    <form id="accountOptions" class="subMenu" method="post">
                        <div>
                            <input type="hidden">
                            <button>Send Friend Request</button>
                        </div>
                        <div>
                            <input type="hidden">
                            <button>Write Message</button>
                        </div>
                    </form>
                }
            </li>
        </ul>
    </div>
</section>
<!-- profile section ends -->
<!-- about section starts -->
<section id="userInfo">
    <div>
        <h1>Information About User</h1>
        <hr />
        <div class="information">
            <div>
                <p>Hometown</p>
            </div>
            <div>
                @if (user.Hometown == null && user == Model)
                {
                    <div>
                        <form>
                            <input type="text">
                            <button type="submit">Add</button>
                        </form>
                    </div>
                }
                else if (user.Hometown == null && user != Model)
                {
                    <p>No Hometown info to show</p>
                }
                else
                {
                    <p>@Model.Hometown</p>
                }
            </div>
        </div>
        <hr />
