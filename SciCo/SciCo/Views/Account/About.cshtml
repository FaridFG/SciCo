        </div>
        <hr />
        <div class="information">
            <div>
                <p>Email</p>
            </div>
            <div>
                <p>@Model.Email</p>
            </div>
        </div>
        <hr />
        <div class="information">
            <div>
                <p>Phone Number</p>
            </div>
            <div>
                @if (user.PhoneNumber == null && user == Model)
