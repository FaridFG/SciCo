@model AppUser
@{ System.Globalization.DateTimeFormatInfo date = new System.Globalization.DateTimeFormatInfo();}
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_AccountPageLayout.cshtml";
}

@await Html.PartialAsync("_ProfilePartial")

<!-- about section starts -->
<section id="userInfo">
    <div>
        <h1>Information About User</h1>
        <hr />
        <div class="information">
            <div>
                <p>Hometown</p>
            </div>
            <div>
                <p>Imishli, Azerbaijan</p>
                <div>
                    <form>
                        <input type="text">
                        <button type="submit">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <hr />
        <div class="information">
            <div>
                <p>Current City</p>
            </div>
            <div>
                <p>Baku, Azerbaijan</p>
                <div>
                    <form>
                        <input type="text">
                        <button type="submit">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <hr />
        <div class="information">
            <div>
                <p>Places you have lived</p>
            </div>
            <div>
                <ul>
                    <li>Imishli, Azerbaijan</li>
                    <li>Shirvan, Azerbaijan</li>
                </ul>
                <div>
                    <form>
                        <input type="text">
                        <button type="submit">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <hr />
        <div class="information">
            <div>
                <p>Birth Date</p>
            </div>
            <div>
                <p>@Model.Birthday.Day @date.GetMonthName(Model.Birthday.Month).ToString()</p>
                <div>
                    <form>
                        <input type="text">
                        <button type="submit">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <hr />
        <div class="information">
            <div>
                <p>Birth Year</p>
            </div>
            <div>
                <p>@Model.Birthday.Year</p>
                <div>
                    <form>
                        <input type="text">
                        <button type="submit">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <hr />
        <div class="information">
            <div>
                <p>Gender</p>
            </div>
            <div>
                <p>Male</p>
                <div>
                    <form>
                        <input type="text">
                        <button type="submit">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <hr />
        <div class="information">
            <div>
                <p>Education</p>
            </div>
            <div>
                <ul>
                    <li>Shirvan Turkish Private High School</li>
                    <li>Baku Engineering University</li>
                    <li>Code Academy</li>
                </ul>
                <div>
                    <form>
                        <input type="text">
                        <button type="submit">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <hr />
        <div class="information">
            <div>
                <p>Email</p>
            </div>
            <div>
                <p>@Model.Email</p>
                <div>
                    <form>
                        <input type="email">
                        <button type="submit">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <hr />
        <div class="information">
            <div>
                <p>Phone Number</p>
            </div>
            <div>
                <p>(+994)50-776-30-43</p>
                <div>
                    <form>
                        <input type="tel">
                        <button type="submit">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- about section ends -->