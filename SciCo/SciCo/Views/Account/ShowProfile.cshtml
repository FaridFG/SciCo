@model AppUser
@{ var user = _userManager.GetUserAsync(User);}
@{
    ViewData["Title"] = "ShowProfile";
    Layout = "~/Views/Shared/_AccountPageLayout.cshtml";
}

<!-- profile section starts -->
<section id="profile">
    <div id="coverPhoto">
        @if (Model.CoverPhoto == null)
        {
            <p>Cover Photo</p>
        }
        else
        {
            <a href="#"> <img src="~/img/@Model.CoverPhoto" alt="cover photo" /> </a>
        }
    </div>
    <div id="options">
        <ul>
            <li>
                <a class="active" asp-action="Timeline" asp-route-id="@Model.Id">Timeline</a>
            </li>
            <li>
                <a asp-action="About" asp-route-id="@Model.Id">About</a>
            </li>
            <li>
                <a asp-action="Friends" asp-route-id="@Model.Id">Friends</a>
            </li>
            <li id="accountInfo">
                <ul>
                    <li id="photoItem">
                        @if (Model.ProfilePhoto == null)
                        {
                            <p>Profile<br>Photo</p>
                        }
                        else
                        {
                            <a href="#"> <img src="~/img/@Model.ProfilePhoto" alt="profile photo"> </a>
                        }
                    </li>
                    <li>
                        <a href="#">@Model.Name @Model.Surname</a>
                    </li>
                    <li>
                        <a href="#">Baku, Azerbaijan</a>
                    </li>
                </ul>
            </li>
            <li>
                <a href="photos.html">Photos</a>
            </li>
            <li>
                <a href="videos.html">Videos</a>
            </li>
            <li id="more">
                <a href="#" class="button"> <i class="fas fa-ellipsis-h"></i> </a>
                <form id="accountOptions" class="subMenu" method="post" asp-action="SendFriendRequest">
                    <div>
                        <input type="hidden" name="ReceiverId" value="@Model.Id" />
                        <button>Send Friend Request</button>
                    </div>
                    <div>
                        <input type="hidden">
                        <button>Write Message</button>
                    </div>
                </form>
            </li>
        </ul>
    </div>
</section>
<!-- profile section ends -->