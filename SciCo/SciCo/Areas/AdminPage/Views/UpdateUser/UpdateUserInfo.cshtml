@model AppUser
@{ System.Globalization.DateTimeFormatInfo date = new System.Globalization.DateTimeFormatInfo();}

@{
    ViewData["Title"] = "UpdateUserInfo";
}

<div class="col-12 mt-5">
    <div class="card">
        <div class="card-body">
            <form asp-area="AdminPage" asp-controller="UpdateUser" asp-action="UpdateUserInformation" method="post">
                <div class="form-group">
                    <label for="disabledTextInput">Email</label>
                    <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Email" disabled /><br />
                    <input type="text" id="disabledTextInput" name="userEmail" class="form-control" value="@Model.Email" />
                </div>
                <div class="form-group">
                    <label for="disabledTextInput">Username</label>
                    <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.UserName" disabled /><br />
                    <input type="text" id="disabledTextInput" name="userName" class="form-control" value="@Model.UserName" />
                </div>
                <div class="form-group">
                    <label for="disabledTextInput">User Role</label>
                    @foreach (var role in ViewBag.UserRole)
                    {
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@role" disabled /><br />
                    }
                    <select class="form-control" name="userRole">
                        @foreach (var role in _db.Roles)
                        {
                            <option>@role.Name</option>
                        }
                    </select>
                </div>
                <div>
                    <input type="hidden" value="@Model.Id" name="id" />
                </div>
                <button class="btn btn-primary btn-block">Update User Information</button>
            </form>
        </div>
    </div>
</div>