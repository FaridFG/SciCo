@model UserPhotoVM

@{
    ViewData["Title"] = "ShowPhotos";
}

<div class="row" style="width: 100%;">
    <div class="col-lg-12 col-md-12" style="display: flex; justify-content: center; flex-wrap: wrap;">
        @foreach (Photo photo in Model.Photos.Where(p => p.user == Model.MainUser))
        {
            <div class="card card-bordered" style="width: 350px; height: 250px; border: 3px solid black; border-radius: 5px; margin: 10px;">
                <img class="card-img-top img-fluid" src="~/img/@photo.Link" alt="image" style="width: 100%; height: 100%; padding: 10px; border-radius: 5px;">
            </div>
        }
    </div>
</div>