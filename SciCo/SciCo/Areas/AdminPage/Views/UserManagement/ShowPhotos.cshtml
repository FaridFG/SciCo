@model UserPhotoVM

@{
    ViewData["Title"] = "ShowPhotos";
}

<div class="row">
    <div class="col-lg-12 col-md-12 mt-5" style="display: flex; justify-content: center;">
        @foreach (Photo photo in Model.Photos.Where(p => p.user == Model.MainUser))
        {
            <div class="card card-bordered" style="width: 400px; height: 300px; margin: 0 25px; border: 3px solid black;">
                <img class="card-img-top img-fluid" src="~/img/@photo.Link" alt="image" style="width: 100%; height: 100%; padding: 5px;">
            </div>
        }
    </div>
</div>