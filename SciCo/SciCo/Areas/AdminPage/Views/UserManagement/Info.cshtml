@model AppUser
@{ System.Globalization.DateTimeFormatInfo date = new System.Globalization.DateTimeFormatInfo();}

@{
    ViewData["Title"] = "Info";
}

<!-- Disabled forms start -->
<div class="col-12 mt-5">
    <div class="card">
        <div class="card-body">
            <form>
                <fieldset disabled>
                    <div class="form-group">
                        <label for="disabledTextInput">Id</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Id" />
                    </div>
                    <div class="form-group">
                        <label for="disabledTextInput">Fullname</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Name @Model.Surname" />
                    </div>
                    <div class="form-group">
                        <label for="disabledTextInput">Email</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Email" />
                    </div>
                    <div class="form-group">
                        <label for="disabledTextInput">Username</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.UserName" />
                    </div>
                    <div class="form-group">
                        <label for="disabledTextInput">Birthday</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Birthday.Day @date.GetMonthName(Model.Birthday.Month) @Model.Birthday.Year" />
                    </div>
                </fieldset>
            </form>
            <a asp-controller="UserManagement" asp-action="ShowFriends" asp-route-id="@Model.Id" type="submit" class="btn btn-primary mt-4 pl-4 pr-4 mr-5">Show user's friends</a>
            <a asp-controller="UserManagement" asp-action="ShowPhotos" asp-route-id="@Model.Id" type="submit" class="btn btn-primary mt-4 pl-4 pr-4 mr-5">Show user's photos</a>
            <a asp-controller="UserManagement" asp-action="ShowMessages" asp-route-id="@Model.Id" type="submit" class="btn btn-primary mt-4 pl-4 pr-4 mr-5">Show user's messages</a>
            <a asp-controller="UserManagement" asp-action="ShowComments" asp-route-id="@Model.Id" type="submit" class="btn btn-primary mt-4 pl-4 pr-4 mr-5">Show user's comments</a>
        </div>
    </div>
</div>
<!-- Disabled forms end -->