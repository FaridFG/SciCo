@model AppUser
@{ System.Globalization.DateTimeFormatInfo date = new System.Globalization.DateTimeFormatInfo();}

@{
    ViewData["Title"] = "Delete";
}

<!-- Disabled forms start -->
<div class="col-12 mt-5">
    <div class="card">
        <div class="card-body">
            <form asp-controller="UserManagement" asp-action="DeletePost" asp-route-id="@Model.Id">
                <fieldset disabled>
                    <div class="form-group">
                        <label for="disabledTextInput">Id</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Id">
                    </div>
                    <div class="form-group">
                        <label for="disabledTextInput">Fullname </label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Name @Model.Surname">
                    </div>
                    <div class="form-group">
                        <label for="disabledTextInput">Email</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Email">
                    </div>
                    <div class="form-group">
                        <label for="disabledTextInput">Username</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.UserName">
                    </div>
                    <div class="form-group">
                        <label for="disabledTextInput">Birthday</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Birthday.Day @date.GetMonthName(Model.Birthday.Month) @Model.Birthday.Year">
                    </div>
                </fieldset>
                <button type="submit" class="btn btn-primary mt-4 pl-4 pr-4">Remove user from system</button>
            </form>
        </div>
    </div>
</div>
<!-- Disabled forms end -->